<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/css/shadcn.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/netflix-shadcn.css" asp-append-version="true" />
</head>

<body>
    <header class="netflix-header">
        <nav class="navbar-netflix">
            <div class="nav-container">
                <a class="nav-logo" asp-controller="Home" asp-action="Index">CINEMA</a>
                <div class="nav-menu">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    @if (string.IsNullOrEmpty(Context.Request.Cookies["authToken"]))
                    {
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Sign In</a>
                        <a class="nav-link btn-nav-primary" asp-controller="Auth" asp-action="Register">Sign Up</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Profile" asp-action="Index">My Profile</a>
                        <a class="nav-link" asp-controller="Profile" asp-action="Tickets">My Tickets</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                        }
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn-logout">Sign Out</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="netflix-footer">
        <div class="footer-content">
            <p>&copy; 2025 Cinema. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-color.js" asp-append-version="true"></script>
    <!-- EmailJS SDK -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
    <script src="~/js/emailjs-config.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>