@model List<cinema_ui.Services.MovieResponseDto>
@{
    ViewData["Title"] = "Movies Management";
    Layout = "_AdminLayout";
    var successMessage = TempData["success"] as string;
}

<div class="page-header">
    <h2>Movies</h2>
    <div class="btn-group">
        <a asp-action="ImportFromTmdb" class="btn btn-success">Import from TMDB</a>
        <a asp-action="CreateMovie" class="btn btn-primary">Add New Movie</a>
    </div>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

@if (Model.Any())
{
    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Duration</th>
                    <th>Release Date</th>
                    <th>Rating</th>
                    <th>Status</th>
                    <th>Featured</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.DurationMinutes min</td>
                        <td>@movie.ReleaseDate.ToString("MMM dd, yyyy")</td>
                        <td>@movie.Rating</td>
                        <td>
                            <span class="status-badge @(movie.IsActive ? "status-active" : "status-inactive")">
                                @(movie.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            @if (movie.IsFeatured)
                            {
                                <span class="badge badge-featured" style="background: gold; color: black; padding: 0.25rem 0.5rem; border-radius: 4px;">â˜… Featured</span>
                            }
                            else
                            {
                                <form asp-action="SetFeaturedMovie" asp-route-id="@movie.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-warning" style="font-size: 0.875rem;">Set as Featured</button>
                                </form>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-secondary">Edit</a>
                                <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <h3>No movies found</h3>
        <p>Get started by adding your first movie.</p>
        <a asp-action="CreateMovie" class="btn btn-primary" style="margin-top: 20px;">Add Movie</a>
    </div>
}

