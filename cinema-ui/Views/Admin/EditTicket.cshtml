@model cinema_ui.Models.AdminEditTicketViewModel
@{
    ViewData["Title"] = "Edit Ticket";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2>Edit Ticket</h2>
    <a asp-action="Tickets" class="btn btn-secondary">Back to Tickets</a>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="admin-form">
    <div class="card mb-4">
        <div class="card-header">
            <h3>Ticket Information</h3>
        </div>
        <div class="card-description">
            <p><strong>Movie:</strong> @Model.MovieTitle</p>
            <p><strong>Theater:</strong> @Model.TheaterName</p>
            <p><strong>Show Time:</strong> @Model.ShowTime.ToString("MMM dd, yyyy HH:mm")</p>
            <p><strong>User:</strong> @Model.Username (@Model.UserEmail)</p>
            <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
        </div>
    </div>

    <form asp-action="EditTicket" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ScreeningId" />
        <input type="hidden" asp-for="MovieTitle" />
        <input type="hidden" asp-for="TheaterName" />
        <input type="hidden" asp-for="ShowTime" />
        <input type="hidden" asp-for="Price" />
        <input type="hidden" asp-for="Username" />
        <input type="hidden" asp-for="UserEmail" />

        <div class="form-group">
            <label class="label" asp-for="SeatNumber">Seat Number</label>
            <input asp-for="SeatNumber" class="form-control" required />
            <span asp-validation-for="SeatNumber" class="form-error"></span>
            <small class="text-muted">Format: Letter + Number (e.g., A1, B5)</small>
        </div>

        <div class="form-group">
            <label class="label" asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Used">Used</option>
            </select>
            <span asp-validation-for="Status" class="form-error"></span>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Update Ticket</button>
            <a asp-action="Tickets" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

