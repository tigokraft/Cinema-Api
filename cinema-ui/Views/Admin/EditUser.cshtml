@model cinema_ui.Models.AdminEditUserViewModel
@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2>Edit User</h2>
    <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="admin-form">
    <div class="card mb-4">
        <div class="card-header">
            <h3>User Information</h3>
        </div>
        <div class="card-description">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Active Tickets:</strong> @Model.TicketCount</p>
        </div>
    </div>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Username" />
        <input type="hidden" asp-for="TicketCount" />

        <div class="form-group">
            <label class="label" asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>

        <div class="form-group">
            <label class="label" asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="form-error"></span>
        </div>

        <div class="form-group">
            <label class="label" asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="form-error"></span>
        </div>

        <div class="form-group">
            <label class="label" asp-for="Role">Role</label>
            <select asp-for="Role" class="form-control">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
            <span asp-validation-for="Role" class="form-error"></span>
        </div>

        <div class="form-group">
            <label class="label" asp-for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="form-control" type="password" />
            <span asp-validation-for="NewPassword" class="form-error"></span>
            <small class="text-muted">Leave blank to keep current password. Min 6 characters.</small>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Update User</button>
            <a asp-action="Users" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
