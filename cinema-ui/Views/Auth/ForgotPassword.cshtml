@model cinema_ui.Controllers.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-box">
        <div class="auth-logo">CINEMA</div>
        <h1 class="auth-title">Reset your password</h1>
        <p class="auth-subtitle">Enter your email to receive a reset code</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-danger">@Model.ErrorMessage</div>
        }

        <form asp-action="ForgotPassword" method="post" class="auth-form">
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn-auth">Send Reset Code</button>
        </form>
        
        <div class="divider">or</div>
        
        <p class="auth-footer">
            Remember your password? <a asp-action="Login" class="auth-link">Sign in</a>
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
