@model cinema_ui.Controllers.SeatSelectionViewModel
@{
    ViewData["Title"] = "Select Your Seats - " + Model.Movie.Title;
    Layout = "_Layout";
    var midPoint = Model.Screening.SeatsPerRow / 2;
}

<div class="cinema-page">
    <div class="cinema-container">
        <!-- Movie Info Header -->
        <div class="cinema-header">
            <a asp-action="MovieDetail" asp-route-id="@Model.Movie.Id" class="back-btn">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Back
            </a>
            <div class="movie-info-compact">
                <h1>@Model.Movie.Title</h1>
                <div class="show-details">
                    <span class="detail">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        @Model.Screening.TheaterName
                    </span>
                    <span class="detail">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        @Model.Screening.ShowTime.ToString("ddd, MMM d â€¢ h:mm tt")
                    </span>
                    <span class="detail price">
                        $@Model.Screening.Price.ToString("F2") / seat
                    </span>
                </div>
            </div>
        </div>

        <!-- Cinema Theater View -->
        <div class="theater-view">
            <!-- Curved Screen -->
            <div class="screen-wrapper">
                <div class="screen">
                    <div class="screen-glow"></div>
                    <span class="screen-text">SCREEN</span>
                </div>
            </div>

            <!-- Seat Map with Perspective -->
            <div class="seat-map-perspective">
                <div class="seat-map" id="seatMap">
                    @for (int row = 0; row < Model.Screening.Rows; row++)
                    {
                        var rowLetter = (char)('A' + row);
                        <div class="seat-row" style="--row-index: @row;">
                            <span class="row-label left">@rowLetter</span>
                            
                            @for (int seat = 1; seat <= Model.Screening.SeatsPerRow; seat++)
                            {
                                var seatNumber = $"{rowLetter}{seat}";
                                var isOccupied = Model.Screening.OccupiedSeats.Contains(seatNumber);
                                var isAisle = seat == midPoint;
                                
                                @if (isAisle)
                                {
                                    <div class="aisle"></div>
                                }
                                
                                <button type="button" 
                                        class="cinema-seat @(isOccupied ? "occupied" : "available")"
                                        data-seat="@seatNumber"
                                        data-price="@Model.Screening.Price"
                                        @(isOccupied ? "disabled" : "")
                                        title="Seat @seatNumber">
                                    <div class="seat-back"></div>
                                    <div class="seat-bottom">
                                        <span class="seat-number">@seat</span>
                                    </div>
                                </button>
                            }
                            
                            <span class="row-label right">@rowLetter</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Legend -->
            <div class="seat-legend">
                <div class="legend-item">
                    <div class="cinema-seat legend available">
                        <div class="seat-back"></div>
                        <div class="seat-bottom"></div>
                    </div>
                    <span>Available</span>
                </div>
                <div class="legend-item">
                    <div class="cinema-seat legend selected">
                        <div class="seat-back"></div>
                        <div class="seat-bottom"></div>
                    </div>
                    <span>Selected</span>
                </div>
                <div class="legend-item">
                    <div class="cinema-seat legend occupied">
                        <div class="seat-back"></div>
                        <div class="seat-bottom"></div>
                    </div>
                    <span>Occupied</span>
                </div>
            </div>
        </div>

        <!-- Selection Summary (Fixed Bottom) -->
        <div class="selection-panel" id="selectionPanel">
            <div class="selection-content">
                <div class="selected-info">
                    <div class="seat-count">
                        <span class="count" id="seatCount">0</span>
                        <span class="label">seats</span>
                    </div>
                    <div class="selected-seats" id="selectedSeatsList">
                        <span class="placeholder">Click seats to select</span>
                    </div>
                </div>
                <div class="total-section">
                    <div class="total-amount">
                        <span class="label">Total</span>
                        <span class="price" id="totalPrice">$0.00</span>
                    </div>
                    <form id="seatForm" asp-action="UserInfo" method="get">
                        <input type="hidden" name="screeningId" value="@Model.Screening.Id" />
                        <input type="hidden" name="seatNumbers" id="selectedSeats" />
                        <button type="submit" class="continue-btn" id="continueBtn" disabled>
                            Continue
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Cinema Page Layout */
.cinema-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #0a0a0f 0%, #12121a 50%, #0a0a0f 100%);
    padding-bottom: 120px;
}

.cinema-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header */
.cinema-header {
    padding: 100px 0 30px;
    display: flex;
    align-items: center;
    gap: 30px;
}

.back-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s;
    padding: 8px 12px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
}

.back-btn:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
}

.movie-info-compact h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: white;
}

.show-details {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.show-details .detail {
    display: flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
}

.show-details .detail.price {
    color: #22c55e;
    font-weight: 600;
}

/* Theater View */
.theater-view {
    background: linear-gradient(180deg, rgba(0,0,0,0.4) 0%, rgba(15,15,25,0.6) 100%);
    border-radius: 24px;
    padding: 40px 20px;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

/* Curved Screen */
.screen-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 50px;
    perspective: 1000px;
}

.screen {
    position: relative;
    width: 80%;
    max-width: 600px;
    height: 40px;
    background: linear-gradient(180deg, #e8f4ff 0%, #b8d4f0 100%);
    border-radius: 100% 100% 0 0 / 200% 200% 0 0;
    box-shadow: 
        0 0 60px rgba(200, 220, 255, 0.5),
        0 0 120px rgba(150, 180, 255, 0.3),
        inset 0 -10px 30px rgba(0, 0, 0, 0.1);
    transform: rotateX(-15deg);
}

.screen-glow {
    position: absolute;
    bottom: -40px;
    left: 10%;
    right: 10%;
    height: 80px;
    background: radial-gradient(ellipse at top, rgba(200, 220, 255, 0.15) 0%, transparent 70%);
    pointer-events: none;
}

.screen-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: rgba(0, 0, 0, 0.3);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.3em;
}

/* Seat Map Perspective */
.seat-map-perspective {
    perspective: 800px;
    overflow-x: auto;
    padding: 20px 0;
}

.seat-map {
    display: flex;
    flex-direction: column;
    gap: 8px;
    transform: rotateX(15deg);
    transform-origin: center top;
    padding: 0 20px;
}

/* Seat Row */
.seat-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    animation: fadeInUp 0.4s ease-out both;
    animation-delay: calc(var(--row-index) * 0.05s);
}

.row-label {
    width: 24px;
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.4);
    text-align: center;
}

.row-label.left { margin-right: 12px; }
.row-label.right { margin-left: 12px; }

/* Aisle */
.aisle {
    width: 24px;
    flex-shrink: 0;
}

/* Cinema Seat - 3D Design */
.cinema-seat {
    position: relative;
    width: 36px;
    height: 42px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: transform 0.2s ease;
}

.cinema-seat:hover:not(.occupied):not(.legend) {
    transform: translateY(-4px) scale(1.1);
    z-index: 10;
}

/* Seat Back */
.seat-back {
    position: absolute;
    top: 0;
    left: 2px;
    right: 2px;
    height: 20px;
    background: linear-gradient(180deg, #3b4252 0%, #2e3440 100%);
    border-radius: 6px 6px 2px 2px;
    transition: all 0.2s ease;
}

/* Seat Bottom (Cushion) */
.seat-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 24px;
    background: linear-gradient(180deg, #4c566a 0%, #3b4252 100%);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    transition: all 0.2s ease;
}

.seat-number {
    font-size: 0.65rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.2s ease;
}

/* Available Seat */
.cinema-seat.available .seat-back {
    background: linear-gradient(180deg, #4a5568 0%, #2d3748 100%);
}

.cinema-seat.available .seat-bottom {
    background: linear-gradient(180deg, #5a6577 0%, #4a5568 100%);
}

.cinema-seat.available:hover .seat-back {
    background: linear-gradient(180deg, #6366f1 0%, #4f46e5 100%);
}

.cinema-seat.available:hover .seat-bottom {
    background: linear-gradient(180deg, #818cf8 0%, #6366f1 100%);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
}

.cinema-seat.available:hover .seat-number {
    color: white;
}

/* Selected Seat */
.cinema-seat.selected .seat-back {
    background: linear-gradient(180deg, #22c55e 0%, #16a34a 100%);
}

.cinema-seat.selected .seat-bottom {
    background: linear-gradient(180deg, #4ade80 0%, #22c55e 100%);
    box-shadow: 0 6px 25px rgba(34, 197, 94, 0.5);
}

.cinema-seat.selected .seat-number {
    color: white;
    font-weight: 700;
}

/* Occupied Seat */
.cinema-seat.occupied {
    cursor: not-allowed;
    opacity: 0.4;
}

.cinema-seat.occupied .seat-back {
    background: linear-gradient(180deg, #1f2937 0%, #111827 100%);
}

.cinema-seat.occupied .seat-bottom {
    background: linear-gradient(180deg, #374151 0%, #1f2937 100%);
}

/* Legend Seats */
.cinema-seat.legend {
    width: 28px;
    height: 32px;
    cursor: default;
}

.cinema-seat.legend .seat-back {
    height: 14px;
}

.cinema-seat.legend .seat-bottom {
    height: 18px;
}

/* Seat Legend */
.seat-legend {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 10px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
}

/* Selection Panel - Fixed Bottom */
.selection-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(15, 15, 25, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 16px 20px;
    z-index: 100;
    transform: translateY(0);
    transition: transform 0.3s ease;
}

.selection-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
}

.selected-info {
    display: flex;
    align-items: center;
    gap: 24px;
}

.seat-count {
    display: flex;
    align-items: baseline;
    gap: 6px;
}

.seat-count .count {
    font-size: 2rem;
    font-weight: 700;
    color: #22c55e;
    line-height: 1;
}

.seat-count .label {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
}

.selected-seats {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
}

.selected-seats .placeholder {
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.875rem;
}

.selected-seats .seat-tag {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
}

.total-section {
    display: flex;
    align-items: center;
    gap: 24px;
}

.total-amount {
    text-align: right;
}

.total-amount .label {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.75rem;
    display: block;
}

.total-amount .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
}

.continue-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.continue-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
}

.continue-btn:disabled {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.3);
    cursor: not-allowed;
}

/* Responsive */
@@media (max-width: 768px) {
    .cinema-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
    }
    
    .seat-map {
        transform: none;
    }
    
    .cinema-seat {
        width: 32px;
        height: 38px;
    }
    
    .selection-content {
        flex-direction: column;
        gap: 12px;
    }
    
    .selected-info {
        width: 100%;
        justify-content: space-between;
    }
    
    .total-section {
        width: 100%;
        justify-content: space-between;
    }
}
</style>

<script>
let selectedSeats = [];
const seatPrice = @Model.Screening.Price;

document.querySelectorAll('.cinema-seat.available').forEach(btn => {
    btn.addEventListener('click', function() {
        const seatNumber = this.dataset.seat;
        
        if (this.classList.contains('selected')) {
            this.classList.remove('selected');
            selectedSeats = selectedSeats.filter(s => s !== seatNumber);
        } else {
            this.classList.add('selected');
            selectedSeats.push(seatNumber);
        }
        
        updateSelection();
    });
});

function updateSelection() {
    const countEl = document.getElementById('seatCount');
    const seatsListEl = document.getElementById('selectedSeatsList');
    const totalPriceEl = document.getElementById('totalPrice');
    const selectedSeatsInput = document.getElementById('selectedSeats');
    const continueBtn = document.getElementById('continueBtn');
    
    selectedSeats.sort();
    const count = selectedSeats.length;
    const total = count * seatPrice;
    
    countEl.textContent = count;
    totalPriceEl.textContent = '$' + total.toFixed(2);
    selectedSeatsInput.value = selectedSeats.join(',');
    
    if (count > 0) {
        seatsListEl.innerHTML = selectedSeats.map(s => 
            `<span class="seat-tag">${s}</span>`
        ).join('');
        continueBtn.disabled = false;
    } else {
        seatsListEl.innerHTML = '<span class="placeholder">Click seats to select</span>';
        continueBtn.disabled = true;
    }
}
</script>
