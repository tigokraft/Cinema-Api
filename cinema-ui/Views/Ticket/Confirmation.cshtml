@model cinema_ui.Controllers.TicketConfirmationViewModel
@{
    ViewData["Title"] = "Booking Confirmation";
    Layout = "_Layout";
}

<div class="confirmation-page slide-in">
    <div class="confirmation-container">
        <div class="success-icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="64" height="64">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>
        
        <h1>Booking Confirmed!</h1>
        <p class="subtitle">Your ticket has been successfully purchased</p>

        <div class="ticket-display">
            <div class="ticket-header-bar">
                <span class="ticket-label">E-TICKET</span>
                <span class="ticket-id">#@Model.Ticket.Id</span>
            </div>
            
            <div class="ticket-body">
                <h2 class="movie-title">@Model.Ticket.MovieTitle</h2>
                
                <div class="ticket-grid">
                    <div class="ticket-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        <div>
                            <span class="label">Theater</span>
                            <span class="value">@Model.Ticket.TheaterName</span>
                        </div>
                    </div>
                    
                    <div class="ticket-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        <div>
                            <span class="label">Date & Time</span>
                            <span class="value">@Model.Ticket.ShowTime.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                        </div>
                    </div>
                    
                    <div class="ticket-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
                        <div>
                            <span class="label">Seat</span>
                            <span class="value seat-highlight">@Model.Ticket.SeatNumber</span>
                        </div>
                    </div>
                    
                    <div class="ticket-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <div>
                            <span class="label">Total Paid</span>
                            <span class="value price">$@Model.Ticket.Price.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="ticket-footer-bar">
                <span>Purchased @Model.Ticket.PurchaseDate.ToString("MMM d, yyyy")</span>
            </div>
        </div>

        <div class="email-status" id="emailStatus">
            <div class="sending">
                <svg class="spinner" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" width="20" height="20">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Sending confirmation email...
            </div>
        </div>

        <div class="action-buttons">
            <a asp-controller="Profile" asp-action="Tickets" class="btn btn-primary btn-lg">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" /></svg>
                View My Tickets
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>

<style>
.confirmation-page {
    min-height: 100vh;
    padding: 120px var(--spacing-lg) var(--spacing-2xl);
    background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(222 47% 8%) 100%);
    display: flex;
    justify-content: center;
}

.slide-in {
    animation: slideIn 0.4s ease-out;
}

@@keyframes slideIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.confirmation-container {
    max-width: 500px;
    text-align: center;
}

.success-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto var(--spacing-lg);
    background: linear-gradient(135deg, hsl(142 76% 36%) 0%, hsl(142 76% 28%) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: scaleIn 0.5s ease-out;
}

@@keyframes scaleIn {
    from { transform: scale(0); }
    to { transform: scale(1); }
}

.success-icon svg {
    color: white;
}

.confirmation-container h1 {
    font-size: 2rem;
    font-weight: 700;
    color: hsl(var(--foreground));
    margin-bottom: var(--spacing-xs);
}

.subtitle {
    color: hsl(var(--muted-foreground));
    margin-bottom: var(--spacing-xl);
}

.ticket-display {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: var(--spacing-lg);
}

.ticket-header-bar {
    background: linear-gradient(135deg, hsl(217 91% 60%) 0%, hsl(263 70% 50%) 100%);
    padding: var(--spacing-sm) var(--spacing-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.ticket-label {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.9);
}

.ticket-id {
    font-family: monospace;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.9);
}

.ticket-body {
    padding: var(--spacing-lg);
}

.movie-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: hsl(var(--foreground));
    margin-bottom: var(--spacing-lg);
}

.ticket-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
    text-align: left;
}

.ticket-item {
    display: flex;
    gap: var(--spacing-sm);
    align-items: flex-start;
}

.ticket-item svg {
    color: hsl(var(--muted-foreground));
    flex-shrink: 0;
    margin-top: 2px;
}

.ticket-item div {
    display: flex;
    flex-direction: column;
}

.ticket-item .label {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.ticket-item .value {
    font-size: 0.95rem;
    font-weight: 600;
    color: hsl(var(--foreground));
}

.seat-highlight {
    background: linear-gradient(135deg, hsl(217 91% 60%) 0%, hsl(263 70% 50%) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.price {
    color: hsl(142 76% 45%) !important;
    -webkit-text-fill-color: hsl(142 76% 45%) !important;
}

.ticket-footer-bar {
    background: rgba(255, 255, 255, 0.02);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.8rem;
    color: hsl(var(--muted-foreground));
}

.email-status {
    margin-bottom: var(--spacing-lg);
    padding: var(--spacing-md);
    border-radius: 10px;
    font-size: 0.9rem;
}

.email-status .sending {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: hsl(var(--muted-foreground));
}

.email-status .success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: hsl(142 76% 45%);
    background: rgba(34, 197, 94, 0.1);
    padding: var(--spacing-md);
    border-radius: 10px;
}

.email-status .error {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: hsl(0 84% 60%);
    background: rgba(239, 68, 68, 0.1);
    padding: var(--spacing-md);
    border-radius: 10px;
}

.spinner {
    animation: spin 1s linear infinite;
}

@@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.action-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.action-buttons .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}
</style>

@section Scripts {
    <script>
        // Send confirmation email via EmailJS
        document.addEventListener('DOMContentLoaded', function() {
            const emailData = {
                to_email: '@Model.UserEmail',
                to_name: '@(string.IsNullOrEmpty(Model.UserName) ? "Movie Lover" : Model.UserName)',
                movie_title: '@Model.Ticket.MovieTitle.Replace("'", "\\'")',
                theater_name: '@Model.Ticket.TheaterName.Replace("'", "\\'")',
                show_time: '@Model.Ticket.ShowTime.ToString("dddd, MMMM d, yyyy 'at' h:mm tt")',
                seat_number: '@Model.Ticket.SeatNumber',
                ticket_price: '$@Model.Ticket.Price.ToString("F2")',
                ticket_id: '#@Model.Ticket.Id',
                purchase_date: '@Model.Ticket.PurchaseDate.ToString("MMMM d, yyyy")'
            };

            const statusEl = document.getElementById('emailStatus');
            
            // Only send if we have an email
            if (emailData.to_email && emailData.to_email.includes('@@')) {
                emailjs.send('service_qz6sbsp', 'template_tfodn2f', emailData)
                    .then(function(response) {
                        console.log('Email sent successfully:', response);
                        statusEl.innerHTML = '<div class="success"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Confirmation email sent to ' + emailData.to_email + '</div>';
                    }, function(error) {
                        console.error('Email failed:', error);
                        statusEl.innerHTML = '<div class="error"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg> Could not send email. Check your tickets for details.</div>';
                    });
            } else {
                statusEl.innerHTML = '<div class="error"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg> No email on file. Update your profile to receive confirmations.</div>';
            }
        });
    </script>
}
