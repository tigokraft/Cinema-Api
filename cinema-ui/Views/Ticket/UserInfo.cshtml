@model cinema_ui.Controllers.UserInfoViewModel
@{
    ViewData["Title"] = "Booking Information";
    Layout = "_Layout";
}

<div class="content-section" style="margin-top: 100px;">
    <div class="mb-4">
        <a asp-action="SelectSeats" asp-route-screeningId="@Model.ScreeningId" class="btn btn-secondary">‚Üê Back to Seat Selection</a>
    </div>

    <h2 class="section-title">Booking Information</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h3>Booking Summary</h3>
        </div>
        <div class="card-description">
            <p><strong>Movie:</strong> @Model.MovieTitle</p>
            <p><strong>Theater:</strong> @Model.TheaterName</p>
            <p><strong>Show Time:</strong> @Model.ShowTime.ToString("MMM dd, yyyy HH:mm")</p>
            <p><strong>Seat:</strong> @Model.SeatNumber</p>
            <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
        </div>
    </div>

    <div class="admin-form" style="max-width: 600px;">
        <form asp-action="UserInfo" method="post">
            <input type="hidden" asp-for="ScreeningId" />
            <input type="hidden" asp-for="SeatNumber" />
            <input type="hidden" asp-for="MovieTitle" />
            <input type="hidden" asp-for="TheaterName" />
            <input type="hidden" asp-for="ShowTime" />
            <input type="hidden" asp-for="Price" />

            <div class="form-group">
                <label class="label" asp-for="FirstName">First Name *</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="form-error"></span>
            </div>

            <div class="form-group">
                <label class="label" asp-for="LastName">Last Name *</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="form-error"></span>
            </div>

            <div class="form-group">
                <label class="label" asp-for="Email">Email *</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="form-error"></span>
                <small class="text-muted">Your ticket confirmation will be sent to this email</small>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-primary btn-lg">Continue to Payment</button>
                <a asp-action="SelectSeats" asp-route-screeningId="@Model.ScreeningId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

