@model cinema_ui.Controllers.UserInfoViewModel
@{
    ViewData["Title"] = "Your Information";
    Layout = "_Layout";
}

<div class="checkout-page slide-in">
    <div class="checkout-container">
        <!-- Order Summary -->
        <div class="order-summary">
            <h2>Booking Summary</h2>
            <div class="summary-card">
                <div class="movie-info">
                    <h3>@Model.MovieTitle</h3>
                    <p class="showtime">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        @Model.ShowTime.ToString("dddd, MMMM d 'at' h:mm tt")
                    </p>
                    <p class="theater">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        @Model.TheaterName
                    </p>
                </div>
                
                <div class="ticket-details">
                    <div class="detail-row">
                        <span class="label">Seat</span>
                        <span class="value seat-badge">@Model.SeatNumber</span>
                    </div>
                    <div class="detail-row total-row">
                        <span class="label">Price</span>
                        <span class="value total">$@Model.Price.ToString("F2")</span>
                    </div>
                </div>
            </div>

            <!-- Progress Steps -->
            <div class="progress-steps">
                <div class="step completed">
                    <div class="step-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <span>Select Seat</span>
                </div>
                <div class="step-line completed"></div>
                <div class="step active">
                    <div class="step-icon">2</div>
                    <span>Your Info</span>
                </div>
                <div class="step-line"></div>
                <div class="step">
                    <div class="step-icon">3</div>
                    <span>Payment</span>
                </div>
            </div>
        </div>
        
        <!-- User Info Form -->
        <div class="form-section">
            <h2>Your Information</h2>
            
            <div class="info-notice">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                <div>
                    <strong>Ticket Confirmation</strong>
                    <p>Your ticket will be sent to the email address below.</p>
                </div>
            </div>

            <form asp-action="UserInfo" method="post" id="userInfoForm">
                <input type="hidden" asp-for="ScreeningId" />
                <input type="hidden" asp-for="SeatNumber" />
                <input type="hidden" asp-for="MovieTitle" />
                <input type="hidden" asp-for="TheaterName" />
                <input type="hidden" asp-for="ShowTime" />
                <input type="hidden" asp-for="Price" />

                <div class="name-row">
                    <div class="form-group">
                        <label class="label" asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="input" placeholder="John" required />
                        <span asp-validation-for="FirstName" class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="label" asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="input" placeholder="Doe" required />
                        <span asp-validation-for="LastName" class="form-error"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="label" asp-for="Email">Email Address</label>
                    <div class="email-input-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                        <input asp-for="Email" type="email" class="input email-input" placeholder="john@example.com" required />
                    </div>
                    <span asp-validation-for="Email" class="form-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg submit-btn">
                        Continue to Payment
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                    </button>
                    <a asp-action="SelectSeats" asp-route-screeningId="@Model.ScreeningId" class="btn btn-secondary">Back to Seats</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.checkout-page {
    min-height: 100vh;
    padding: 120px var(--spacing-lg) var(--spacing-2xl);
    background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(222 47% 8%) 100%);
}

/* Slide-in animation */
.slide-in {
    animation: slideIn 0.4s ease-out;
}

@@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.checkout-container {
    max-width: 900px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--spacing-xl);
}

@@media (max-width: 768px) {
    .checkout-container {
        grid-template-columns: 1fr;
    }
}

.order-summary h2,
.form-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
    color: hsl(var(--foreground));
}

.summary-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: var(--spacing-lg);
}

.movie-info h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: hsl(var(--foreground));
}

.movie-info p {
    display: flex;
    align-items: center;
    gap: 8px;
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
    margin-bottom: var(--spacing-xs);
}

.movie-info svg {
    flex-shrink: 0;
    opacity: 0.7;
}

.ticket-details {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm) 0;
}

.detail-row .label {
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
}

.detail-row .value {
    color: hsl(var(--foreground));
    font-weight: 500;
}

.seat-badge {
    background: linear-gradient(135deg, hsl(217 91% 60%) 0%, hsl(263 70% 50%) 100%);
    padding: 4px 12px;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.875rem;
}

.total-row {
    margin-top: var(--spacing-sm);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.total-row .label,
.total-row .value {
    font-size: 1.125rem;
    font-weight: 700;
}

.total-row .total {
    color: hsl(142 76% 45%);
}

/* Progress Steps */
.progress-steps {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: var(--spacing-xl);
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    gap: var(--spacing-sm);
}

.step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
}

.step-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.1);
    color: hsl(var(--muted-foreground));
    border: 2px solid transparent;
}

.step span {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
}

.step.active .step-icon {
    background: linear-gradient(135deg, hsl(217 91% 60%) 0%, hsl(263 70% 50%) 100%);
    color: white;
}

.step.active span {
    color: hsl(var(--foreground));
}

.step.completed .step-icon {
    background: hsl(142 76% 36%);
    color: white;
}

.step.completed span {
    color: hsl(142 76% 45%);
}

.step-line {
    width: 40px;
    height: 2px;
    background: rgba(255, 255, 255, 0.1);
}

.step-line.completed {
    background: hsl(142 76% 36%);
}

/* Form Section */
.form-section {
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: var(--spacing-xl);
}

.info-notice {
    display: flex;
    gap: var(--spacing-md);
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 12px;
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.info-notice svg {
    color: hsl(263 70% 60%);
    flex-shrink: 0;
    margin-top: 2px;
}

.info-notice strong {
    color: hsl(263 70% 70%);
    display: block;
    margin-bottom: 4px;
}

.info-notice p {
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
    margin: 0;
}

.name-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
}

@@media (max-width: 500px) {
    .name-row {
        grid-template-columns: 1fr;
    }
}

.form-group {
    margin-bottom: var(--spacing-md);
}

.form-group .label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
}

.input {
    width: 100%;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    color: hsl(var(--foreground));
    font-size: 1rem;
    transition: all 0.2s ease;
}

.input:focus {
    outline: none;
    border-color: hsl(217 91% 60%);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

.input::placeholder {
    color: hsl(var(--muted-foreground));
}

.email-input-wrapper {
    position: relative;
}

.email-input-wrapper svg {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    color: hsl(var(--muted-foreground));
}

.email-input {
    padding-left: 44px;
}

.form-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xl);
}

.submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 16px 24px;
    font-size: 1rem;
    font-weight: 600;
    background: linear-gradient(135deg, hsl(217 91% 60%) 0%, hsl(263 70% 50%) 100%);
    border: none;
    border-radius: 12px;
    color: white;
    cursor: pointer;
    transition: all 0.2s ease;
}

.submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
}

.form-error {
    color: hsl(var(--destructive));
    font-size: 0.8rem;
    margin-top: 4px;
    display: block;
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
