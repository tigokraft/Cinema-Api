@model cinema_ui.Controllers.PaymentViewModel
@{
    ViewData["Title"] = "Payment";
    Layout = "_Layout";
}

<div class="content-section" style="margin-top: 100px;">
    <div class="mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">← Cancel</a>
    </div>

    <h2 class="section-title">Payment</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h3>Booking Summary</h3>
        </div>
        <div class="card-description">
            <p><strong>Movie:</strong> @Model.MovieTitle</p>
            <p><strong>Seat:</strong> @Model.SeatNumber</p>
            <p><strong>Total:</strong> $@Model.Price.ToString("F2")</p>
        </div>
    </div>

    <div class="admin-form" style="max-width: 600px;">
        <div class="alert alert-info mb-4">
            <strong>⚠️ Demo Payment System</strong><br/>
            This is a demo payment system. Your payment will not be processed. Fill in any information to proceed.
        </div>

        <form asp-action="ProcessPayment" method="post">
            <input type="hidden" asp-for="ScreeningId" />
            <input type="hidden" asp-for="SeatNumber" />
            <input type="hidden" asp-for="Price" />
            <input type="hidden" asp-for="MovieTitle" />

            <div class="form-group">
                <label class="label" asp-for="CardNumber">Card Number *</label>
                <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" required />
                <span asp-validation-for="CardNumber" class="form-error"></span>
            </div>

            <div class="form-group">
                <label class="label" asp-for="CardHolderName">Card Holder Name *</label>
                <input asp-for="CardHolderName" class="form-control" placeholder="John Doe" required />
                <span asp-validation-for="CardHolderName" class="form-error"></span>
            </div>

            <div class="grid" style="grid-template-columns: 1fr 1fr; gap: var(--spacing-md);">
                <div class="form-group">
                    <label class="label" asp-for="ExpiryDate">Expiry Date *</label>
                    <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" maxlength="5" required />
                    <span asp-validation-for="ExpiryDate" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label class="label" asp-for="Cvv">CVV *</label>
                    <input asp-for="Cvv" class="form-control" placeholder="123" maxlength="4" required />
                    <span asp-validation-for="Cvv" class="form-error"></span>
                </div>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-success btn-lg" style="flex: 1;">Complete Purchase</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Format card number
        document.getElementById('CardNumber')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formatted.substring(0, 19);
        });

        // Format expiry date
        document.getElementById('ExpiryDate')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });
    </script>
}

